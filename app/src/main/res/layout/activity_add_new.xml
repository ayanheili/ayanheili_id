<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/title_field" android:hint="Title"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/desc_field" android:hint="Description"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/xp_field" android:hint="XP"
        android:inputType="number"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/save_btn" android:text="Save"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
